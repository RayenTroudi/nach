# ============================================
# CLERK AUTHENTICATION - PRODUCTION
# ============================================
# Get these from: https://dashboard.clerk.com
# Frontend API: https://clerk.taleldeutchlandservices.com
# Backend API: https://api.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/my-learning
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
NEXT_PUBLIC_CLERK_AFTER_DELETE_URL=/

# Set to the full production URL of this app - used by authMiddleware domain config
# to fix "cookie-missing/interstitial" errors when using a custom Clerk domain.
NEXT_PUBLIC_APP_URL=https://www.taleldeutchlandservices.com

# Set to "true" ONLY if this app is a satellite of a multi-app Clerk setup.
# For a standard single-app setup, leave as "false" or unset.
NEXT_PUBLIC_CLERK_IS_SATELLITE=false

# Clerk Webhook Secret
# Get from: Clerk Dashboard -> Webhooks -> Add Endpoint
# Webhook URL: https://www.taleldeutchlandservices.com/api/webhooks
WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# MONGODB DATABASE
# ============================================
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0
DATABASE_NAME=tds

# ============================================
# UPLOADTHING (File Upload Service)
# ============================================
# Get from: https://uploadthing.com/dashboard
# For UploadThing v7+, use UPLOADTHING_TOKEN (replaces UPLOADTHING_SECRET)
UPLOADTHING_TOKEN=sk_live_your_secret_key_here
UPLOADTHING_SECRET=sk_live_your_secret_key_here
UPLOADTHING_APP_ID=your_app_id_here

# ============================================
# MUX (Video Processing & Streaming)
# ============================================
# Get from: https://dashboard.mux.com/ -> Settings -> Access Tokens
# Mux processes videos uploaded to UploadThing and provides adaptive bitrate streaming
MUX_TOKEN_ID=your_mux_token_id_here
MUX_TOKEN_SECRET=your_mux_token_secret_here
# Optional: For signed/private video URLs (if needed)
# MUX_SIGNING_KEY_ID=your_signing_key_id
# MUX_SIGNING_KEY_PRIVATE=your_signing_key_private

# ============================================
# SERVER URL
# ============================================
# For local: http://localhost:3000
# For production: https://www.taleldeutchlandservices.com
NEXT_PUBLIC_SERVER_URL=https://www.taleldeutchlandservices.com

# ============================================
# RESEND (Email Service)
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
# Webhook Secret for verifying incoming emails
# Get from: Resend Dashboard -> Webhooks -> Signing Secret
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# MUX (Video Processing)
# ============================================
# Get from: https://dashboard.mux.com/settings/access-tokens
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# ============================================
# PUSHER (Real-time Chat)
# ============================================
# Get from: https://dashboard.pusher.com
PUSHER_APP_ID=your_pusher_app_id
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
NEXT_PUBLIC_PUSHER_CLUSTER=eu

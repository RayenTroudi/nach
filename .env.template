# ============================================
# REQUIRED ENVIRONMENT VARIABLES FOR WELEARN
# ============================================

# ---------------------------------------------
# CLERK AUTHENTICATION
# ---------------------------------------------
# Get these from: https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/my-learning
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/my-learning
NEXT_PUBLIC_CLERK_AFTER_DELETE_URL=/

# ---------------------------------------------
# CLERK WEBHOOK
# ---------------------------------------------
# Webhook secret for Clerk events
WEBHOOK_SECRET=your_webhook_secret_here

# ---------------------------------------------
# MONGODB DATABASE
# ---------------------------------------------
# Get MongoDB connection string from: https://www.mongodb.com/
MONGODB_URL=your_mongodb_connection_string_here
DATABASE_NAME=tds

# ---------------------------------------------
# UPLOADTHING (File Upload Service)
# ---------------------------------------------
# Get these from: https://uploadthing.com/
# For UploadThing v7+, use UPLOADTHING_TOKEN (same value as UPLOADTHING_SECRET)
UPLOADTHING_TOKEN=your_uploadthing_secret_here
UPLOADTHING_SECRET=your_uploadthing_secret_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# ---------------------------------------------
# SERVER URL
# ---------------------------------------------
# Use http://localhost:3000 for development
# Use your production URL for deployment
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# ---------------------------------------------
# RESEND (Email Service)
# ---------------------------------------------
# Get API key from: https://resend.com/
RESEND_API_KEY=your_resend_api_key_here
# Webhook Secret for verifying incoming emails
# Get from: Resend Dashboard -> Webhooks -> Signing Secret
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ---------------------------------------------
# STRIPE (Payment Processing)
# ---------------------------------------------
# Get these from: https://stripe.com/
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=your_stripe_public_key_here

# ---------------------------------------------
# TINYMCE (Rich Text Editor)
# ---------------------------------------------
# Get API key from: https://www.tiny.cloud/
NEXT_PUBLIC_TINY_EDITOR_API_KEY=your_tinymce_api_key_here

# ---------------------------------------------
# MUX (Video Processing)
# ---------------------------------------------
# Get these from: https://www.mux.com/
MUX_TOKEN_ID=your_mux_token_id_here
MUX_TOKEN_SECRET=your_mux_token_secret_here

# ---------------------------------------------
# PUSHER (Real-time Chat)
# ---------------------------------------------
# Get these from: https://pusher.com/
PUSHER_APP_ID=your_pusher_app_id_here
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster_here
